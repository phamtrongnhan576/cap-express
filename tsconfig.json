{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "baseUrl": "./src",
        "paths": {
            "@/*": ["*"]
        },
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "allowImportingTsExtensions": false,
        "strict": true
    },
    "include": ["src"]
}
